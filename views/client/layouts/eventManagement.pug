doctype html
html(lang='vi')
    head
        meta(charset='UTF-8')
        meta(name='viewport' content='width=device-width, initial-scale=1.0')
        title Event Management
        link(rel='icon' type='image/png' href='/client/images/logo.png' sizes='32x32')
        link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css' rel='stylesheet')
        script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js')
        script(src='https://code.jquery.com/jquery-3.6.0.min.js')
        link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css')
        link(rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css' integrity='sha512-Evv84Mr4kqVGRNSgIGL/F/aIDqQb7xQ2vcrdIwxfjThSH8CSR7PBEakCr51Ck+w+/U6swU2Im1vVX0SVk9ABhg==' crossorigin='anonymous' referrerpolicy='no-referrer')
        // Sweetalert
        script(src="https://cdn.jsdelivr.net/npm/sweetalert2@11")
        // TinyMCE
        script(src='https://cdn.jsdelivr.net/npm/tinymce/tinymce.min.js')
        script.
            tinymce.init({ selector: '#eventDescription', height: 500 });
        link(rel='stylesheet' href='/client/css/event.css')
    body
        div(class='d-flex')
            // Sidebar
            div(class='sidebar p-3 bg-dark text-light') 
                h4(class='text-success mb-4 d-flex align-items-center') 
                    i(class='bi bi-gear-fill me-2') Quản Lý Sự Kiện
                ul(class='nav flex-column')
                    li(class='nav-item mb-2')
                        a(href='#' class='nav-link text-light d-flex align-items-center') 
                            i(class='bi bi-calendar-event me-2') 
                            span Sự kiện của tôi
                    li(class='nav-item mb-2')
                        a(href='#' class='nav-link text-light d-flex align-items-center') 
                            i(class='bi bi-bar-chart-line me-2') 
                            span Quản lý báo cáo
                    li(class='nav-item mb-2')
                        a(href='#' class='nav-link text-light d-flex align-items-center') 
                            i(class='bi bi-file-earmark-text me-2') 
                            span Điều khoản cho Ban tổ chức

            // Main Content
            div(class='content w-100')
            
                div(class='header')
                    div(class='w-100 step-container gap-2')
                        div(class='step active') 1. Thông tin sự kiện
                        div(class='step') 2. Thời gian &amp; Loại vé
                        div(class='step') 3. Cài đặt
                        div(class='step') 4. Thông tin thanh toán
                        button(class='btn' style="background-color: rgb(45 194 117); color: #fff" id="submitEvent") Tiếp tục
                        ul(class='navbar-nav mb-2 mb-lg-0 ms-auto gap-2 flex-row align-items-center justify-content-end')
                            li(class='nav-item')
                                a(class='nav-link create-event' href='/event/create') Tạo sự kiện
                            li(class='nav-item dropdown position-relative')
                                div(class='nav-link dropdown-toggle d-flex align-items-center p-2 rounded' role='button' data-bs-toggle='dropdown' aria-expanded='false' style='cursor: pointer; transition: background 0.3s;')
                                    img(src='/client/images/avatar.png' alt='User Avatar' class='rounded-circle border border-2' width='36' height='36')
                                    span.ms-2.fw-semibold Tài khoản
                                ul(class='dropdown-menu dropdown-menu-end shadow-lg border-0 rounded-3')
                                    li
                                        a(class='dropdown-item py-2 d-flex align-items-center' href='#')
                                            i(class='bi bi-ticket-perforated me-2 text-primary fs-5')
                                            span Vé Đã Mua
                                    li
                                        a(class='dropdown-item py-2 d-flex align-items-center' href='#')
                                            i(class='bi bi-calendar-event me-2 text-success fs-5')
                                            span Sự Kiện Của Tôi
                                    li
                                        a(class='dropdown-item py-2 d-flex align-items-center' href='#')
                                            i(class='bi bi-person me-2 text-warning fs-5')
                                            span Trang Cá Nhân
                                    li
                                        hr(class='dropdown-divider')
                                    li
                                        a(class='dropdown-item py-2 d-flex align-items-center text-danger action-logout' href='#')
                                            i(class='bi bi-box-arrow-right me-2 fs-5')
                                            span Đăng xuất
                // Main
                main
                    block main
            
        // My JS
        script(type="module" src="/client/js/event.js")

        block script
