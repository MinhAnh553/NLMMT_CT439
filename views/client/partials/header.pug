header(class='fixed-top')
    nav(class='navbar navbar-expand-lg')
        div(class='container-fluid')
            a(class='navbar-brand' href='/') MelodyMeet
                img(src='/client/images/logo.png' alt='Eventbrite Logo' height='30')
            button(class='navbar-toggler' type='button' data-bs-toggle='collapse' data-bs-target='#navbarContent')
                span(class='navbar-toggler-icon')
            div#navbarContent(class='collapse navbar-collapse')
                form(class='d-flex search-form mx-auto')
                    div(class='input-group')
                        span(class='input-group-text')
                            i(class='bi bi-search')
                        input(class='form-control' type='search' placeholder='Tìm kiếm' aria-label='Search')
                ul(class='navbar-nav mb-2 mb-lg-0 gap-2 align-items-center')
                    li(class='nav-item')
                        a(class='nav-link create-event' href='/event/create') Tạo sự kiện
                    li(class='nav-item')
                        a(class='nav-link custom-nav-link d-flex align-items-center' href='#')
                            i(class='bi bi-ticket-perforated me-2')
                            | Vé đã mua

                    if(user)
                        li(class='nav-item dropdown position-relative')
                            div(class='nav-link dropdown-toggle d-flex align-items-center p-2 rounded' role='button' data-bs-toggle='dropdown' aria-expanded='false' style='cursor: pointer; transition: background 0.3s;')
                                img(src='/client/images/avatar.png' alt='User Avatar' class='rounded-circle border border-2' width='36' height='36')
                                span.ms-2.fw-semibold Tài khoản
                            ul(class='dropdown-menu dropdown-menu-end shadow-lg border-0 rounded-3')
                                li
                                    a(class='dropdown-item py-2 d-flex align-items-center' href='#')
                                        i(class='bi bi-ticket-perforated me-2 text-primary fs-5')
                                        span Vé Đã Mua
                                li
                                    a(class='dropdown-item py-2 d-flex align-items-center' href='#')
                                        i(class='bi bi-calendar-event me-2 text-success fs-5')
                                        span Sự Kiện Của Tôi
                                li
                                    a(class='dropdown-item py-2 d-flex align-items-center' href='#')
                                        i(class='bi bi-person me-2 text-warning fs-5')
                                        span Trang Cá Nhân
                                li
                                    hr(class='dropdown-divider')
                                li
                                    a(class='dropdown-item py-2 d-flex align-items-center text-danger action-logout' href='#')
                                        i(class='bi bi-box-arrow-right me-2 fs-5')
                                        span Đăng xuất

                    else 
                        div(class='auth-buttons ms-3')
                            button(class='btn btn-outline-primary me-2' data-bs-toggle="modal" data-bs-target="#loginModal") Đăng nhập
                            button(class='btn btn-primary' data-bs-toggle="modal" data-bs-target="#registerModal") Đăng ký